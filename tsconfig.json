{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"typeRoots": [
			"node_modules/@types"
		],
		"baseUrl": "src",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"allowJs": true,
		"checkJs": true,
		"moduleResolution": "node"
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules/*",
		"__sapper__/*",
		"public/*"
	]
}