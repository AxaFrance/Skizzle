{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"typeRoots": [
			"node_modules/@types"
		],
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"importsNotUsedAsValues": "remove"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules/*", "__sapper__/*", "public/*", "tools/*"],
}