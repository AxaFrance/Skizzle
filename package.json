{
	"name": "skizzle",
	"version": "1.0.0",
	"appId": "skizzle",
	"description": "Visualisation des pull requests",
	"main": "public/electron.js",
	"homepage": "./",
	"repository": {
		"type": "git",
		"url": "https://github.com/AxaGuilDEv/skizzle.git"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"precommit": "lint-staged pretty-quick --staged",
		"build": "rollup -c --extend",
		"autobuild": "rollup -c -w --extend",
		"start": "npm-run-all -p dev electron",
		"electron": "electron .",
		"dev": "run-p start:dev autobuild",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage --no-cache",
		"lint": "./node_modules/.bin/eslint ./src --ext .js,.svelte --fix",
		"validate": "svelte-check --workspace src/",
		"start:prod": "sirv --port 4567 public",
		"start:dev": "sirv --port 4567 public --dev"
	},
	"keywords": [
		"electron",
		"svelte"
	],
	"author": {
		"name": "Mathieu De Baerdemaeker",
		"email": "mathieu.debaerdemaeker@gmail.com",
		"url": "https://github.com/Debaerdm"
	},
	"contributors": [
		{
			"name": "Jerome Boukorras",
			"email": "jerome.boukorras@gmail.com",
			"url": "https://github.com/itupix"
		},
		{
			"name": "Hamza HAMIDI",
			"url": "https://github.com/hamzahamidi"
		}
	],
	"license": "MIT",
	"devDependencies": {
		"@babel/core": "7.11.1",
		"@babel/plugin-transform-runtime": "7.11.0",
		"@babel/preset-env": "7.11.0",
		"@babel/runtime": "7.11.2",
		"@commitlint/cli": "9.1.1",
		"@commitlint/config-conventional": "9.1.1",
		"@rollup/plugin-commonjs": "14.0.0",
		"@rollup/plugin-node-resolve": "8.4.0",
		"@rollup/plugin-typescript": "5.0.2",
		"@testing-library/jest-dom": "5.11.2",
		"@testing-library/svelte": "3.0.0",
		"@tsconfig/svelte": "1.0.8",
		"@types/jest": "^26.0.9",
		"@types/node": "^14.0.27",
		"babel-core": "6.26.3",
		"babel-jest": "26.2.2",
		"babel-polyfill": "6.26.0",
		"electron": "9.2.0",
		"electron-builder": "22.8.0",
		"electron-builder-notarize": "1.2.0",
		"electron-reloader": "1.0.1",
		"eslint": "7.6.0",
		"eslint-config-airbnb-base": "14.2.0",
		"eslint-plugin-import": "2.22.0",
		"eslint-plugin-jest": "23.20.0",
		"eslint-plugin-svelte3": "2.7.3",
		"husky": "4.2.5",
		"jest": "26.2.2",
		"jest-localstorage-mock": "2.4.3",
		"jest-transform-svelte": "2.1.1",
		"lint-staged": "10.2.11",
		"npm-run-all": "4.1.5",
		"prettier": "2.0.5",
		"pretty-quick": "2.0.1",
		"rollup": "2.23.1",
		"rollup-plugin-livereload": "1.3.0",
		"rollup-plugin-svelte": "5.2.3",
		"rollup-plugin-terser": "6.1.0",
		"sass": "1.26.10",
		"svelte": "3.24.1",
		"svelte-check": "1.0.10",
		"svelte-jester": "1.0.6",
		"svelte-preprocess": "4.0.10",
		"ts-jest": "^26.2.0",
		"tslib": "2.0.1",
		"typescript": "3.9.7"
	},
	"dependencies": {
		"electron-debug": "3.1.0",
		"electron-log": "4.2.2",
		"electron-updater": "4.3.4",
		"electron-util": "0.14.2",
		"electron-context-menu": "2.3.0",
		"electron-unhandled": "3.0.2",
		"sirv-cli": "1.0.5"
	},
	"build": {
		"appId": "skizzle",
		"compression": "normal",
		"productName": "Skizzle",
		"copyright": "Copyright Â© 2020 Axa France IARD / Axa France VIE",
		"win": {
			"target": "nsis"
		},
		"files": [
			"public/**/*",
			"node_modules/**/*"
		],
		"mac": {
			"type": "distribution",
			"target": [
				"dmg"
			],
			"category": "public.app-category.news"
		},
		"directories": {
			"buildResources": "buildResources/"
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix",
			"git add"
		]
	}
}
