{
	"name": "skizzle",
	"version": "1.0.0",
	"appId": "skizzle",
	"description": "Visualisation des pull requests",
	"main": "public/electron.js",
	"homepage": "./",
	"repository": {
		"type": "git",
		"url": "https://github.com/AxaGuilDEv/skizzle.git"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"precommit": "lint-staged pretty-quick --staged",
		"build": "rollup -c --extend",
		"autobuild": "rollup -c -w --extend",
		"start": "npm-run-all -p dev electron",
		"electron": "electron .",
		"dev": "run-p start:dev autobuild",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage --no-cache",
		"lint": "./node_modules/.bin/eslint ./src --ext .js,.svelte --fix",
		"start:prod": "sirv --port 4567 public",
		"start:dev": "sirv --port 4567 public --dev"
	},
	"keywords": [
		"electron",
		"svelte"
	],
	"author": {
		"name": "Mathieu De Baerdemaeker",
		"email": "mathieu.debaerdemaeker@gmail.com",
		"url": "https://github.com/Debaerdm"
	},
	"contributors": [
		{
			"name": "Jerome Boukorras",
			"email": "jerome.boukorras@gmail.com",
			"url": "https://github.com/itupix"
		}
	],
	"license": "MIT",
	"devDependencies": {
		"@babel/core": "7.10.3",
		"@babel/plugin-transform-runtime": "7.10.3",
		"@babel/preset-env": "7.10.3",
		"@babel/runtime": "7.10.3",
		"@commitlint/cli": "9.0.1",
		"@commitlint/config-conventional": "9.0.1",
		"@rollup/plugin-commonjs": "13.0.0",
		"@rollup/plugin-node-resolve": "8.1.0",
		"@testing-library/jest-dom": "5.10.1",
		"@testing-library/svelte": "3.0.0",
		"babel-core": "6.26.3",
		"babel-jest": "26.1.0",
		"babel-polyfill": "6.26.0",
		"electron": "9.0.5",
		"electron-builder": "22.7.0",
		"electron-builder-notarize": "1.1.2",
		"electron-reloader": "1.0.1",
		"eslint": "7.3.1",
		"eslint-config-airbnb-base": "14.2.0",
		"eslint-plugin-import": "2.21.2",
		"eslint-plugin-jest": "23.17.1",
		"eslint-plugin-svelte3": "2.7.3",
		"husky": "4.2.5",
		"jest": "26.1.0",
		"jest-localstorage-mock": "2.4.2",
		"jest-transform-svelte": "2.1.1",
		"lint-staged": "10.2.11",
		"node-sass": "4.14.1",
		"npm-run-all": "4.1.5",
		"prettier": "2.0.5",
		"pretty-quick": "2.0.1",
		"rollup": "2.18.0",
		"rollup-plugin-livereload": "1.3.0",
		"rollup-plugin-svelte": "5.2.3",
		"rollup-plugin-terser": "6.1.0",
		"svelte": "3.23.2",
		"svelte-jester": "1.0.6",
		"svelte-preprocess": "3.9.10"
	},
	"dependencies": {
		"electron-context-menu": "2.0.1",
		"electron-debug": "3.1.0",
		"electron-log": "4.2.2",
		"electron-unhandled": "3.0.2",
		"electron-updater": "4.3.1",
		"electron-util": "0.14.1",
		"sirv-cli": "1.0.1"
	},
	"build": {
		"appId": "skizzle",
		"compression": "normal",
		"productName": "Skizzle",
		"copyright": "Copyright Â© 2020 Axa France IARD / Axa France VIE",
		"win": {
			"target": "nsis"
		},
		"files": [
			"public/**/*",
			"node_modules/**/*"
		],
		"afterSign": "electron-builder-notarize",
		"mac": {
			"type": "distribution",
			"target": [
				"mas",
				"zip",
				"dmg"
			],
			"category": "public.app-category.news",
			"entitlements": "./buildResources/entitlements.mac.plist",
			"entitlementsInherit": "./buildResources/entitlements.mac.plist",
			"hardenedRuntime": true
		},
		"mas": {
			"entitlements": "./buildResources/entitlements.mas.plist",
			"entitlementsInherit": "./buildResources/entitlements.mas.inherit.plist",
			"hardenedRuntime": false
		},
		"directories": {
			"buildResources": "buildResources/"
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix",
			"git add"
		]
	}
}
